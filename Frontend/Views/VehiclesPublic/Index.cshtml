@model List<Frontend.Models.Vehicle>

@{
    ViewData["Title"] = "Catálogo de Vehículos";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="get" class="mb-3 row">
    <div class="col-md-8">
        <input type="text" name="q" value="@ViewBag.Query" class="form-control" placeholder="Buscar por marca o modelo..." />
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary w-100">Buscar</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Año</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var v in Model)
            {
                <tr>
                    <td>@v.Id</td>
                    <td>@v.Brand</td>
                    <td>@v.Model</td>
                    <td>@v.Year</td>
                    <td>@string.Format("{0:N2}", v.Price)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No se encontraron vehículos.</td>
            </tr>
        }
    </tbody>
</table>

<p>Total encontrados: <b>@ViewBag.Total</b></p>
