@model Frontend.Models.MfaViewModel
@{
    ViewData["Title"] = "Verificación MFA";
}
<h3 class="mt-3">@ViewData["Title"]</h3>

<form asp-action="Mfa" method="post" class="mt-3">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Password" />

    <div class="mb-3">
        <label asp-for="OtpCode" class="form-label">Código de 6 dígitos</label>
        <input asp-for="OtpCode"
               class="form-control"
               inputmode="numeric"
               pattern="\d{6}"
               autocomplete="one-time-code"
               maxlength="6"
               placeholder="Código de 6 dígitos" />

        <span asp-validation-for="OtpCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Verificar</button>

    <div class="text-danger mt-3">
        @Html.ValidationSummary()
    </div>
</form>
