@{
    ViewData["Title"] = "Crear Vehículo";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h4 class="mb-3">Crear Vehículo</h4>

                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label>Marca</label>
                        <input name="brand" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Modelo</label>
                        <input name="model" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Año</label>
                        <input name="year" type="number" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Precio</label>
                        <input name="price" type="number" step="0.01" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Guardar</button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</div>
