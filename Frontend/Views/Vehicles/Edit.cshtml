@model Frontend.Models.Vehicle

@{
    ViewData["Title"] = "Editar Vehículo";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h4 class="mb-3">Editar Vehículo</h4>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label>Marca</label>
                        <input name="brand" value="@Model.Brand" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Modelo</label>
                        <input name="model" value="@Model.Model" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Año</label>
                        <input name="year" type="number" value="@Model.Year" class="form-control" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Precio</label>
                        <input name="price" type="number" step="0.01" value="@Model.Price" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Actualizar</button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>
</div>
